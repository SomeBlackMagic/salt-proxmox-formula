{%- if networks is defined and 'vmbr0' in networks.keys() -%}
	{%- if not networks.vmbr0.address == 'dhcp' -%}
		{%- set ip = networks.vmbr0.address -%}
	{%- else -%}
		{%- set ip = salt['grains.get']('ipv4')[0] -%}
	{%- endif -%}
{%- else -%}
	{%- set ip = salt['grains.get']('ipv4')[0] -%}
{%- endif -%}
{%- set fqdn = salt['grains.get']('fqdn') -%}
{%- set hostname = salt['grains.get']('host') -%}
127.0.0.1 localhost.localdomain localhost
{{ip}} {{fqdn}} {{hostname}} pvelocalhost

# The following lines are desirable for IPv6 capable hosts

::1     ip6-localhost ip6-loopback
fe00::0 ip6-localnet
ff00::0 ip6-mcastprefix
ff02::1 ip6-allnodes
ff02::2 ip6-allrouters
ff02::3 ip6-allhosts
